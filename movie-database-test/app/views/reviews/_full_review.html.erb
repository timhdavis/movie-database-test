<div class="card">
  <div class="card-header">
    <span class="review-rating" data-score="<%= review.rating %>"></span>
    <strong><%= review.rating.to_s %></strong> / <%= maxRating %>
         <%= link_to(review.movie.title ||= "View Movie", movie_path(review.movie)) %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= review.comment.to_s %></p>
      <footer class="blockquote-footer"><cite title="Review Author"><%= review.email %></cite>
       on <%= review.created_at.strftime("%b %e, %Y at %l:%M %p") %></footer>
    </blockquote>
  </div>
</div>

<script>
    $(function() {
        
        $(".review-rating").raty ({
            readOnly: true,
            score: function() {
                return $(this).attr("data-score");
            },
            path: "<%= @star_path %>" //"app/assets/images/" // "/assets/"
        });


    });
</script>
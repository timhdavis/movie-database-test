<div>
    <%= render(:partial => 'reviews/rating', :locals => {:rating => review.rating }) %>
    <span>
        - <%= link_to(shortened_title(review.movie).to_s, movie_path(review.movie)) %>
    </span>
    <% if (review.comment) %>
        <p><%= review.comment.truncate(30, separator: ' ') %></p>
    <% end %>
    
</div>